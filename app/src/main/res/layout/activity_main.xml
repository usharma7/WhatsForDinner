<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.sharma.utkarsh.whatsfordinner.MainActivity"
   >



    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/textView"
            android:layout_alignEnd="@+id/groceryBtn"
            android:layout_alignStart="@+id/groceryBtn"
            android:layout_below="@+id/groceryBtn"
            android:padding="5dp"
            android:text="Groceries"
            android:textColor="@android:color/black"
            android:textAlignment="center"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/textView2"
            android:layout_alignEnd="@+id/RecipieBtn"
            android:layout_alignStart="@+id/RecipieBtn"
            android:layout_below="@+id/RecipieBtn"
            android:padding="5dp"
            android:text="Recipies"
            android:textAlignment="center"
            android:textColor="@android:color/black"
            android:textSize="15sp" />

        <ImageButton
            android:id="@+id/addBtn"
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:layout_alignStart="@+id/textView4"
            android:layout_alignTop="@+id/groceryBtn"
            app:srcCompat="@drawable/ic_plus_grey600_48dp" />

        <ImageButton
            android:id="@+id/groceryBtn"
            android:layout_width="110dp"
            android:layout_height="110dp"
            app:srcCompat="@drawable/ic_cart_grey600_18dp"
            android:layout_marginTop="29dp"
            android:layout_below="@+id/textView2"
            android:layout_alignStart="@+id/textView2" />

        <ImageButton
            android:id="@+id/menuBtn"
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:layout_marginStart="43dp"
            app:srcCompat="@drawable/ic_calendar_text_grey600_18dp"
            android:layout_marginTop="45dp"
            android:layout_below="@+id/imageView"
            android:layout_alignParentStart="true" />

        <ImageButton
            android:id="@+id/RecipieBtn"
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:layout_marginEnd="49dp"
            app:srcCompat="@drawable/ic_food_grey600_18dp"
            android:layout_alignTop="@+id/menuBtn"
            android:layout_alignParentEnd="true" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            app:srcCompat="@drawable/whatsfordinner" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/addBtn"
            android:layout_alignStart="@+id/addBtn"
            android:layout_below="@+id/groceryBtn"
            android:padding="5dp"
            android:text="Add"
            android:textAlignment="center"
            android:textColor="@android:color/black"

            android:textSize="15sp" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/menuBtn"
            android:layout_alignStart="@+id/menuBtn"
            android:layout_below="@+id/RecipieBtn"
            android:padding="5dp"
            android:text="Meals"
            android:textAlignment="center"
            android:textColor="@android:color/black"
            android:textSize="15sp" />

    </RelativeLayout>

</android.support.constraint.ConstraintLayout>
