    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.sharma.utkarsh.whatsfordinner.NewDish">

    <include layout="@layout/content_new_dish"
        android:id="@+id/include" />



    <RelativeLayout
